<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_launcher"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.loutasae.tolet.Home">


    <TextView
        android:text="Welcome to"
        android:textColor="#1c47f9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textAlignment="center"
        android:id="@+id/welcome" />

    <TextView
        android:text="ToLet"
        android:textColor="#1a108f"
        android:textSize="35dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/tolet"
        android:layout_below="@+id/welcome"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/find"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="findclicked"
        android:id="@+id/find"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/welcome"
        android:layout_marginBottom="59dp" />

    <Button
        android:text="Upload"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="uploadclicked"
        android:id="@+id/upload"
        android:layout_alignBaseline="@+id/find"
        android:layout_alignBottom="@+id/find"
        android:layout_toStartOf="@+id/welcome" />
</RelativeLayout>
